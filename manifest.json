{
  "name": "Study & Chill",
  "description": "Pause or lower volume of a designated YouTube music tab while a designated YouTube tutorial tab plays.",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtu.be/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Study & Chill",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
